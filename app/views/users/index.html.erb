<h1 align="center">
  All Users
</h1>

<% if @users.length > 0 %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th class="page-header" colspan="3">
        <h2>Users</h2>
      </th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user|%>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td> <%= link_to 'View Profile', user_path(user), class: 'btn btn-xs btn-primary' %> </td>
          <% if current_user.friends.include?(user)%>
          <td><%= link_to 'Unfriend', friendship_path(user), method: :delete,
                          data: {confirm: "Are you sure"}, class:'btn btn-xs btn-danger'%> </td>
          <% else %>
          <td>
            <%= link_to 'Follow', add_friend_path(friend: user), method: :post, class: 'btn btn-xs btn-primary' %>
          </td>
          <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row col-lg-12">
    <p class="lead"> You don't have any friends</p>
  </div>
<% end %>