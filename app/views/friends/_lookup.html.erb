<div id="friends_lookup">
  <%= form_tag search_friends_path,remote: true, method: :get, id: 'friends_lookup_form' do %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-10">
        <%= text_field_tag :search_param, params[:search_param], placeholder: 'Search by name or email', autofocus: true,
                           class: 'form-control search-box input-lg' %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: 'btn btn-success btn-lg') do %>
          <i class="glyphicon glyphicon-search"></i> Search
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id ="results">
  <%= render 'friends/result.html'%>
</div>